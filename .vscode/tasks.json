{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Setup Development Environment",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"./scripts/setup.ps1"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": ".venv/Scripts/python.exe",
			"args": [
				"src/app.py"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Build Project",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "npm",
			"args": [
				"test"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Switch to Home Config",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-Command",
				"Copy-Item -Path './config/home.json' -Destination './config/active.json' -Force; Write-Host 'Switched to HOME configuration'"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Switch to Office Config",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-Command",
				"Copy-Item -Path './config/office.json' -Destination './config/active.json' -Force; Write-Host 'Switched to OFFICE configuration'"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Start Test Auth Server",
			"type": "shell",
			"command": ".venv/Scripts/python.exe",
			"args": [
				"test_auth.py"
			],
			"isBackground": true,
			"group": "build"
		}
	]
}